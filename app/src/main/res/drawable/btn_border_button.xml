<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="@dimen/button_curve"
    android:insetLeft="@dimen/button_curve"
    android:insetRight="@dimen/button_curve"
    android:insetTop="@dimen/button_curve">

    <shape android:shape="rectangle">

        <!-- corner -->
        <corners android:radius="@dimen/button_curve" />

        <!-- stroke -->
        <stroke
            android:width="@dimen/dimen_2dp"
            android:color="@color/colorPink" />

        <!-- fill -->
        <solid android:color="@color/colorPink" />
    </shape>
</inset>