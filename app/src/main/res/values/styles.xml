<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Widget.Dashboard.Divider" parent="Divider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_1dp</item>
    </style>

    <style name="Widget.Dashboard.Vertical.Divider" parent="Divider">
        <item name="android:layout_width">@dimen/dimen_1dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- overlay -->
    <style name="Overlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
